<h1>Listing All Reviews</h1>

<table>
	<tr>
		<th>
			Customer Id
		</th>
		<th>
			Hotel Id
		</th>
		<th>
			Menu Item Id
		</th>
		<th>
			Title
		</th>
		<th>
			Review
		</th>
		<th>
			Rating
		</th>

		<th colspan="2">
		</th>
	</tr>

	<% @reviews.each do |review| %>
		<tr>
			<td><%= review.customer_id %></td>
			<td><%= review.hotel_id %></td>
			<td><%= review.menu_item_id %></td>
			<td><%= review.title %></td>
			<td><%= review.review %></td>
			<td><%= review.rating %></td>
			<td><%= link_to 'Show', review_path(review) %></td>
			<td><%= link_to 'Edit', edit_review_path(review) %></td>
			<td><%= link_to 'Destroy', review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>

<%= link_to 'New Review', new_review_path %>