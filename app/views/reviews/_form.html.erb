<%= form_for @review do |f| %>
	
	<% if @review.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@review.errors.count, "error") %> prohibited this article from being saved:
			</h2>
			<ul>
				<% @review.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>		
		</div>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :hotel_id %><br>
		<%= f.number_field :hotel_id %>
	</p>

	<p>
		<%= f.label :review %><br>
		<%= f.text_area :review %>
	</p>

	<p>
		<%= f.label :rating %><br>
		<%= f.number_field :rating %>
	</p>

	<p>
		<%= f.hidden_field :customer_id, :value => 1 %>
	</p>

	<p>
		<%= f.hidden_field :menu_item_id, :value => 1 %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
